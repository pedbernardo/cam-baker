{
  "name": "cam-baker",
  "version": "0.8.4",
  "description": "Non official Camunda CLI for building Tasklist embedded forms",
  "main": "lib/index.mjs",
  "bin": {
    "baker": "bin/baker.mjs"
  },
  "directories": {
    "lib": "lib"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "husky install",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .vue,.js,.cjs,.mjs --fix --ignore-path .gitignore",
    "test": "vitest run",
    "test:watch": "vitest",
    "cli:dev": "node bin/baker.mjs --config camunda.config.mjs",
    "cli:build": "cross-env NODE_ENV=production node bin/baker.mjs build",
    "cli:stop": "node bin/baker.mjs stop",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": "eslint"
  },
  "keywords": [
    "camunda",
    "forms",
    "cli",
    "build",
    "tasklist"
  ],
  "author": "Pedro Bernardo <pedrovbernardo@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedbernardo/cam-baker.git"
  },
  "bugs": {
    "url": "https://github.com/pedbernardo/cam-baker/issues"
  },
  "homepage": "https://cam-baker.netlify.app",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "c8": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "8.44.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "16.0.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "vitepress": "^1.1.4",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "chokidar": "^3.6.0",
    "colors": "^1.4.0",
    "commander": "^12.0.0",
    "dotenv-flow": "^4.1.0",
    "esbuild": "^0.21.1",
    "fast-xml-parser": "^4.3.6",
    "form-data": "^4.0.0",
    "glob": "^10.3.15",
    "htmlnano": "^2.1.1",
    "js-yaml": "^4.1.0",
    "json-server": "^0.17.4",
    "live-server": "^1.2.2",
    "livereload": "^0.9.3",
    "lodash": "^4.17.21",
    "ora": "^8.0.1",
    "posthtml": "^0.16.6",
    "posthtml-expressions": "^1.11.3",
    "posthtml-include": "^2.0.1",
    "posthtml-insert-at": "^0.2.7",
    "run-camunda": "8.0.0",
    "sass": "^1.77.1",
    "shelljs": "^0.8.5"
  }
}
